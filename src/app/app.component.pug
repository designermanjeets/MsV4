// Modal
<div class="modal fade" id="loginModal" [ngClass]="{'show': isUserLogin}" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" (click)="isUserLogin=false;">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                form(name="form", (ngSubmit)!="f.form.valid && login()", #f="ngForm", novalidate)
                    .form-group( [ngClass]!="{ 'has-danger': f.submitted && !username.valid }")
                        label(for="username") Username
                        input.form-control( type="text", name="username", [(ngModel)]="model.username", #username="ngModel", required )
                        .help-block.form-control-feedback(*ngIf!="f.submitted && !username.valid") Username is required
                    .form-group( [ngClass]!="{ 'has-danger': f.submitted && !password.valid }")
                        label(for="password") Password
                        input.form-control( type="password", name="password", [(ngModel)]="model.password", #password="ngModel", required )
                        .help-block.form-control-feedback(*ngIf!="f.submitted && !password.valid") Password is required
                    .form-group
                        button.btn.btn-primary( [disabled]="loading" ) Login
                        |
                        |
                        img( *ngIf="loading", src="data:image/gif;base64," )
                        |
                        |
                        a.btn.btn-link( (click)="isUserLogin=false;" ) Close
            </div>
        </div>
    </div>
</div>
.modal-backdrop.fade( [ngClass]="{'show': isUserLogin}" )